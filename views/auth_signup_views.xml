<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="cloudalia_module_misc.campos_login" name="Auth Signup/ResetPassword form fields escola">
            <div class="form-group field-name">
                <label class="control-label" for="name">Nombre y Apellidos</label>
                <input type="text" name="name" t-att-value="name" id="name" class="form-control" placeholder="Recuerde poner ambos apellidos" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>
            <div class="clearfix" />
            <div class="form-group field-login">
                <label class="control-label" for="email">Correo electrónico</label>
                <input type="text" name="login" t-att-value="login" id="login" class="form-control" placeholder="ejemplo@dominio.com" autofocus="autofocus" autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
            <div class="form-group field-password">
                <label for="password" class="control-label">Contraseña</label>
                <input type="password" name="password" id="password" class="form-control" required="required" t-att-autofocus="'autofocus' if only_passwords else None"/>
            </div>
            <div class="form-group field-confirm_password">
                <label for="confirm_password" class="control-label">Confirmar contraseña</label>
                <input type="password" name="confirm_password" id="confirm_password" class="form-control" required="required"/>
            </div>
            <div t-attf-class="form-group" id="div_phone">
                <label class="control-label" for="phone">Teléfono</label>
                <input type="tel" name="phone" t-att-value="phone" class="form-control" autofocus="autofocus" autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
            <div class="clearfix" />
            <div t-attf-class="form-group div_vat">
                <label class="control-label font-weight-normal" for="vat">DNI </label>
                <input type="text" name="vat" t-att-value="vat" class="form-control" autofocus="autofocus" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
            <div class="clearfix" />
            <div t-attf-class="form-group div_street">
                <label class="control-label" for="street">Calle <span class="hidden-xs"> y número</span>
                </label>
                <input type="text" name="street" class="form-control" t-att-value="street" autofocus="autofocus" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
            <div t-attf-class="form-group div_street2">
                <label class="control-label label-optional" for="street2">Calle 2</label>
                <input type="text" name="street2" class="form-control" t-att-value="street2" autofocus="autofocus" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
            <div class="clearfix" />
            <div t-attf-class="form-group">
                <label class="control-label label-optional">Código Postal</label>
                <input type="text" name="zip" class="form-control"  autofocus="autofocus" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
            <div t-attf-class="form-group div_city">
                <label class="control-label" for="city">Ciudad</label>
                <input type="text" name="city" class="form-control" t-att-value="city" autofocus="autofocus" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
            <div class="clearfix" />
            <div t-attf-class="form-group div_country">
                <label class="control-label" for="country_id">País</label>
                <select id="country_id" name="country_id" class="form-control">
                    <option value="" selected="selected">España</option>
                    <t t-foreach="countries" t-as="c">
                        <option t-att-value="c.id" t-att-selected="c.id == (country and country.id or -1)">
                            <t t-esc="c.name" />
                        </option>
                    </t>
                </select>
            </div>
            <div t-attf-class="form-group div_state">
                <label class="control-label" for="state_id">Provincia</label>
                <select name="state_id" class="form-control" data-init="1">
                    <option value="" selected="selected">Barcelona</option>
                    <t t-foreach="country and country.state_ids or []" t-as="s">
                        <option t-att-value="s.id" t-att-selected="s.id == state_id">
                            <t t-esc="s.name" />
                        </option>
                    </t>
                </select>
            </div>
            <div class="form-group">
                <label for="escola" class="control-label">Centro educativo</label>
                <input type="text" name="escola" t-att-value="escola" id="escola" class="form-control" placeholder="El nombre del centro educativo" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

        </template>

        <template id="cloudalia_module_misc.registro_login" name="Sign up login escola">
            <t t-call="web.login_layout">
                <form class="oe_signup_form" role="form" method="post" t-if="not message">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <t t-call="cloudalia_module_misc.campos_login">
                        <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                    </t>

                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>
                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    <input type="hidden" name="token" t-att-value="token"/>
                    <div class="clearfix oe_login_buttons">
                        <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link pull-right">¿Ya tiene una cuenta?</a>
                        <button type="submit" class="btn btn-primary pull-left o_signup_btn"> Registrarse</button>
                    </div>

                </form>
            </t>
        </template>
    </data>
</odoo>
