<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="cloudalia_module_misc.campos_login" name="Auth Signup/ResetPassword form fields escola">
            <p>Escola</p>
            <div class="form-group field-login">
                <label for="login" class="control-label">Su correo electrónico</label>
                <input type="text" name="login" t-att-value="login" id="login" class="form-control" autofocus="autofocus" autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>

            <input type="hidden" name="name" t-att-value="name" id="name" class="form-control" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None" />

            <div class="form-group field-name">
                <label for="firstname" class="control-label">Su nombre</label>
                <input type="text" name="firstname" t-att-value="firstname" id="firstname" class="form-control" placeholder="Por ejemplo, Antonio" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-name">
                <label for="lastname" class="control-label">Su(s) apellido(s)</label>
                <input type="text" name="name" t-att-value="name" id="name" class="form-control" placeholder="Por ejemplo, García Álvarez" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-password">
                <label for="password" class="control-label">Contraseña</label>
                <input type="password" name="password" id="password" class="form-control" required="required" t-att-autofocus="'autofocus' if only_passwords else None"/>
            </div>

            <div class="form-group field-confirm_password">
                <label for="confirm_password" class="control-label">Confirmar contraseña</label>
                <input type="password" name="confirm_password" id="confirm_password" class="form-control" required="required"/>
            </div>

            <div class="form-group">
                <label for="escola" class="control-label">Centro educativo</label>
                <input type="text" name="escola" t-att-value="escola" id="escola" class="form-control" placeholder="El nombre del centro educativo" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

        </template>

        <template id="cloudalia_module_misc.registro_login" name="Sign up login escola">
            <t t-call="web.login_layout">
                <form class="oe_signup_form" role="form" method="post" t-if="not message">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <t t-call="cloudalia_module_misc.campos_login">
                        <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                    </t>

                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>
                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    <input type="hidden" name="token" t-att-value="token"/>
                    <div class="clearfix oe_login_buttons">
                        <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link pull-right">¿Ya tiene una cuenta?</a>
                        <button type="submit" class="btn btn-primary pull-left o_signup_btn"> Registrarse</button>
                    </div>

                </form>
            </t>
        </template>
    </data>
</odoo>
