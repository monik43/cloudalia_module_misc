<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="auth_signup_fields_extend" inherit_id="auth_signup.fields" name="Signup Fields Extend">
            <xpath expr="//div[@class='form-group field-confirm_password']" position="after">
                <div class="form-group">
                    <label for="escola" class="control-label">City</label>
                    <input type="text" name="escola" t-att-value="city" id="city" class="form-control" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                </div>
            </xpath>
        </template>
    </data>
</odoo>
