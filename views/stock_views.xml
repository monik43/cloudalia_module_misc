<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_move_op_nosg_form_inherit" model="ir.ui.view">
            <field name="name">cloud_stock.move.operations.nosuggest.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_stock_move_operations"/>
            <field name="arch" type="xml">
                <xpath expr="/form/group/group" position="after">
                    <group>
                        <field name="ship_order_move" string="Ship/Transport Order"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">cloud_stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_show_details']" position="attributes">
                    <attribute name="icon"></attribute>
                    <attribute name="style">margin-right: -33px !important;</attribute>
                    <attribute name="class">btn btn-primary</attribute>
                    <attribute name="string">...</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>